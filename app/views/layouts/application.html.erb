<!DOCTYPE html>
<html>
<head>
  <title> <%= t(:name, scope: [:application]) %> </title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div>
    <header>
      <h1> <%= link_to t(:name, scope: [:application]), root_path  %> </h1>
      <nav>
        <ul>
          <li> <%= link_to t(:request, scope: [:application, :navigation]), requests_path, :class => 'active'  %> </li>
          <li> <%= link_to t(:how_to, scope: [:application, :navigation]), root_path  %> </li>
          <li> <%= link_to t(:my_account, scope: [:application, :navigation]), root_path  %> </li>
        </ul>
      </nav>
    </header>
    <div>
      <%= yield %>
    </div>
  </div>
  <footer>
  </footer>
</body>
</html>
