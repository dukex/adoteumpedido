<div id="user_forgot_password" class="user span4 offset2">
  <h2><%= t(:forgot_password, scope: [:titles, :user]) %></h2>
  <%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.semantic_errors :email %>
  <%= f.inputs do %>
  <%= f.input :email, input_html: {class: "span4"}%>
  <% end %>
  <%= render "devise/shared/links" %>
  <%= f.actions do %>
  <%= f.action :submit, :as => :button, button_html: {class: 'btn span2'}, label: t(:forgot_password, scope: [:formtastic, :actions, :user]) %>
  <% end %>
  <% end %>

</div>
<div class="span4">
  <%= render 'shared/why_register' %>
</div>
